<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments_viewmodels.store.store_single.StoreSingleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView_Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="095 849 8658"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_PhoneStatic"
                    app:layout_constraintStart_toEndOf="@+id/textView_PhoneStatic"
                    app:layout_constraintTop_toTopOf="@+id/textView_PhoneStatic" />

                <TextView
                    android:id="@+id/textView_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Kolodvorska ul. 38, 10370, Dugo Selo"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/textView_LocationStatic"
                    app:layout_constraintTop_toTopOf="@+id/textView_LocationStatic" />

                <TextView
                    android:id="@+id/textView_LocationStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/location"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="info@makvic-autici.hr"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_EmailStatic"
                    app:layout_constraintStart_toEndOf="@+id/textView_EmailStatic"
                    app:layout_constraintTop_toTopOf="@+id/textView_EmailStatic"
                    tools:text="info@makvic-autici.hr" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_SellerStatic"
                    app:srcCompat="@drawable/ic_baseline_person_24"
                    app:tint="#2ea3f2" />

                <TextView
                    android:id="@+id/textView_PhoneStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/phone_number"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Location" />

                <TextView
                    android:id="@+id/textView_Seller"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Darko MakviÄ‡"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/textView_EmailStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/email"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_PhoneStatic" />

                <TextView
                    android:id="@+id/textView_SellerStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller"
                    android:textColor="#2ea3f2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:screenOrientation="portrait"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">


                <com.github.islamkhsh.CardSliderViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    app:auto_slide_time="3"
                    app:cardSlider_indicator="@id/indicator"
                    app:cardSlider_otherPagesWidth="24dp"
                    app:cardSlider_pageMargin="12dp"
                    app:cardSlider_smallAlphaFactor="0.5"
                    app:cardSlider_smallScaleFactor="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.github.islamkhsh.CardSliderViewPager>
                <com.github.islamkhsh.CardSliderIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    app:indicatorsToShow="4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager" />

                <TextView
                    android:id="@+id/textView_TitleSingle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:autoText="true"
                    android:background="@drawable/outline"
                    android:maxLines="3"
                    android:minLines="1"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/indicator"
                    tools:text="BMW SERIJA 4 1:64 NOREV SIVI" />

                <TextView
                    android:id="@+id/textView_Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/outline"
                    android:lines="4"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_DescriptionStatic" />

                <TextView
                    android:id="@+id/textView_ManufacturerStaticSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/manufacturer"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TitleSingle" />

                <TextView
                    android:id="@+id/textView_MakeStaticSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/make"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_ManufacturerStaticSingle" />

                <TextView
                    android:id="@+id/textView_ScaleStaticSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/scale"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_MakeStaticSingle" />

                <TextView
                    android:id="@+id/textView_ManufacturerSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView_ManufacturerStaticSingle"
                    app:layout_constraintTop_toTopOf="@+id/textView_ManufacturerStaticSingle" />

                <TextView
                    android:id="@+id/textView_MakeSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView_MakeStaticSingle"
                    app:layout_constraintTop_toTopOf="@+id/textView_MakeStaticSingle" />

                <TextView
                    android:id="@+id/textView_ScaleSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView_ScaleStaticSingle"
                    app:layout_constraintTop_toTopOf="@+id/textView_ScaleStaticSingle" />

                <TextView
                    android:id="@+id/textView_DescriptionStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/description"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_ScaleStaticSingle" />

                <TextView
                    android:id="@+id/textView_PriceSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="TextView"
                    android:textColor="#2ea3f2"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView_Description"
                    app:layout_constraintEnd_toStartOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView_PriceSingleEur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="TextView"
                    android:textColor="#2EA3F2"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_PriceSingle"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/tilde"
                    android:textColor="#2ea3f2"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_PriceSingleEur"
                    app:layout_constraintEnd_toStartOf="@+id/textView_PriceSingleEur" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center_vertical|center"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/wishlistButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#00FFFFFF"
            android:elevation="20dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_star_border_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>